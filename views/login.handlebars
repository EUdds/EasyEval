<div class="EEformBg">
<h2 class="page-header" align="center">Please Login Below</h2>
{{> flash}}
<div align="center" style="width: 80%; margin: 0 auto; ">
<form method="POST" action="/teachers/login" enctype="multipart/form-data" class="form-group form-control">

    <label>Name</label>
    <input type="text" name="email" placeholder="John Doe" class="form-group form-control">
    <label>Password</label>
    <input type="password" name="password" placeholder="Password" class="form-group form-control">
    <input type="submit" class="btn btn-primary" name="Submit" value="Login" class="form-group form-control">
</form>
</div>
</div>